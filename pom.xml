    <developerConnection>scm:hg:https://bitbucket.org/nclarkekb/jwat</developerConnection>
    <url>http://bitbucket.org/nclarkekb/jwat</url>
  </scm>

  <issueManagement>
    <system>jira</system> 
    <url>https://sbforge.org/jira/browse/JWAT</url> 
  </issueManagement>

  <ciManagement>
    <system>jenkins</system>
    <url>https://sbforge.org/jenkins/view/JWAT/</url>
  </ciManagement>

  <developers>
    <developer>
      <name>Nicholas Clarke</name>
      <roles>
        <role>developer</role>
      </roles>
      <email>nicl@kb.dk</email>
      <organization>Det Kongelige Bibliotek/Royal Danish Library</organization>
      <organizationUrl>http://www.kb.dk</organizationUrl>
    </developer>
    <developer>
      <name>Søren Vejrup Carlsen</name>
      <roles>
        <role>reviewer</role>
      </roles>
      <email>svc@kb.dk</email>
      <organization>Det Kongelige Bibliotek/Royal Danish Library</organization>
      <organizationUrl>http://www.kb.dk</organizationUrl>
    </developer>
    <developer>
      <name>Mikis Seth Sørensen</name>
      <roles>
        <role>project manager</role>
      </roles>
      <email>mss@statsbiblioteket.dk</email>
      <organization>Statsbiblioteket/Danish State Library</organization>
      <organizationUrl>http://statsbiblioteket.dk</organizationUrl>
    </developer>
  </developers>

  <modules>
    <module>jwat-common</module>
    <module>jwat-gzip</module>
    <module>jwat-arc</module>
    <module>jwat-warc</module>
    <module>jwat-distribution</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
<!--
    <dependency>
      <groupId>checkstyle</groupId>
      <artifactId>checkstyle</artifactId>
      <version>2.8</version>
    </dependency>
-->
  </dependencies>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.test.failure.ignore>true</maven.test.failure.ignore>
    <checkstyle.localeCountry>dk</checkstyle.localeCountry>
    <checkstyle.cache.file>checkstyleCache</checkstyle.cache.file>
    <license.skip>true</license.skip>
  </properties>

  <build>
    <plugins>
      <plugin>
	<artifactId>maven-compiler-plugin</artifactId>
	<version>2.3.2</version>
	<configuration>
	  <source>1.6</source>
	  <target>1.6</target>
	</configuration>
      </plugin>

      <plugin>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <testFailureIgnore>true</testFailureIgnore>
        </configuration>
        <!--
        <executions>
          <execution>
            <id>surefire.test</id>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
            </goals>
            <configuration>
              <testFailureIgnore>true</testFailureIgnore>
            </configuration>
          </execution>
          <execution>
            <id>surefire.site</id>
            <phase>site</phase>
            <goals>
              <goal>report</goal>
            </goals>
            <configuration>
              <testFailureIgnore>true</testFailureIgnore>
            </configuration>
          </execution>
        </executions>
        -->
      </plugin>

      <plugin>
        <inherited>false</inherited>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.9.0</version>
        <configuration>
          <skip>${license.skip}</skip>
          <encoding>UTF-8</encoding>
          <header>${basedir}/etc/header.txt</header>
          <failIfMissing>true</failIfMissing>
          <aggregate>true</aggregate>
          <properties>
            <license.strictCheck>true</license.strictCheck>
            <owner>Nicholas Clarke</owner>
            <year>${project.inceptionYear}</year>
            <email>nicl@kb.dk</email>
          </properties>
          <excludes>
            <exclude>**/*.arc</exclude>
            <exclude>**/*.warc</exclude>
            <exclude>**/*.xml</exclude>
            <exclude>**/*.txt</exclude>
            <exclude>**/checkstyle.properties</exclude>
            <exclude>**/LICENSE.txt</exclude>
            <exclude>**/.hgignore</exclude>
            <exclude>**/*.sh</exclude>
            <exclude>**/*.bat</exclude>
            <exclude>LICENSE.txt</exclude>
            <exclude>**/src/main/assembly/**</exclude>
            <exclude>**/src/test/resources/**</exclude>
            <exclude>**/src/test/data/**</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <id>check-headers</id>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

